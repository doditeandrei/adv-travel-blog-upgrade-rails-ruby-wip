<div class="container">
  <% @categories.each do |category| %>
    <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
      <a href="https://www.aerdevacanta.ro/category/<%= category.slug %>">
        <div class="text-uppercase-expanded mb-2 text-info">
          <u><%= category.name.capitalize %></u>
        </div>
      </a>
      <ul class="list-unstyled ml-2">
        <% category.articles.each do |article| %>
          <li class="mb-1">
            <a href="https://www.aerdevacanta.ro/article/<%= article.slug %>" class="">
              <u><%= article.title %></u>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  <% end%>
  <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
    <a href="https://www.aerdevacanta.ro/cookies">
      <div class="text-uppercase-expanded mb-2 text-info">
        <u>Cookies</u>
      </div>
    </a>
  </div>
  <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
    <a href="https://www.aerdevacanta.ro/termeni-si-conditii">
      <div class="text-uppercase-expanded mb-2 text-info">
        <u>Termeni & Conditii</u>
      </div>
    </a>
  </div>
  <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
    <a href="https://www.aerdevacanta.ro/despre">
      <div class="text-uppercase-expanded mb-2 text-info">
        <u>Despre</u>
      </div>
    </a>
  </div>
  <div class="col-lg-3 col-md-6 mb-5 mb-md-0">
    <a href="https://www.aerdevacanta.ro/contact">
      <div class="text-uppercase-expanded mb-2 text-info">
        <u>Contact</u>
      </div>
    </a>
  </div>
</div>